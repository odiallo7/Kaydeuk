{% extends 'base.html.twig' %}

{% block title %} {{ property.title }} {% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
            <div class="col-md-6">
                {% if property.fileName %}
                  <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto">
                {% else %}
                    <img src="{{ 'images/properties/default.jpg' | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height:auto">
                {% endif %}
            </div> 
        
            <div class="col-md-4">
                <h2>{{ property.title }}</h2> 
                <h3>{{ property.rooms }} pièces - {{ property.rooms }} m2</h3>              
                <div class="text-primary" style="font-weight: blod; font-size: 2rem;">{{ property.formattedPrice }} FCFA</div>
                <a href="#" class="btn btn-primary">Contacter nous</a>
            </div>
        </div>
        </div>
    </div>

    <p class="">{{ property.description | nl2br }}</p>

    <div class="row">
        <div class="col-md-6 mx-auto">
        <h2>Caractéristiques </h2>
          <table class="table table-striped">
            <tr>
                <td>Surface habitable</td>
                <td>{{ property.surface }} m2</td>
            </tr>
            <tr>
                <td>Pièces</td>
                <td>{{ property.rooms }} </td>
            </tr>
            <tr>
                <td>Chambes</td>
                <td>{{ property.bedrooms }}</td>
            </tr>
            <tr>
                <td>Etage</td>
                <td>{{ property.floor }} </td>
            </tr>
            <tr>
                <td>Chauffage</td>
                <td>{{ property.heatType }} </td>
            </tr>
          </table>
        </div>
        <div class="col-md-4">
            <h2>Spécifités</h2>
            <ul class="list-group">
            {% for option in property.options %}
                <li class="tist-group-item">{{ option.name }}</li>
            {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
